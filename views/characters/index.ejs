<%- include("../partials/header")%>
<div class="text-center">
	<h1>Characters</h1>
</div>
	<div class="container">
		<div class="row">
			<%campaign.characters.forEach(function(character){%>
			<div class="col-6">
				<div class="row">
					<div class="col-4">
						<img class="img-thumbnail CharThumb" src=<%=character.Image%>>
					</div>
					<div class="col-8">
						<h3 class="charHead"><a href="/<%=campaign._id%>/characters/<%=character._id%>"><%=character.Name%></a></h3>
						<p><%=character.Description%></p>
					</div>
				</div>
			</div>
			<%})%>
		</div>
	</div>

	<%- include("../partials/footer")%>
