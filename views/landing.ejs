<body>
	<h1 id="header">
		DnD for YOU and ME!
	</h1>
	<div class="container text-center">
		<% if(error && error.length > 0){ %>
			<div class="alert d-block bg-danger w-50 text-center" role="alert">
				<%= error %>
			</div>
		<% } %>
		<% if(success && success.length > 0){ %>
			<div class="alert alert-success w-50 ml-25" role="alert">
				<%= success %>
			</div>
		<% } %>
	</div>
	
		<form class="text-center" action="/login" method="POST">
			<div class="form-row d-block py-2">
				<input type="text" name="username" placeholder="username">	
			</div>
			<div class="form-row d-block pb-2">
				<input type="password" name="password" placeholder="password">	
			</div>
			<div class="form-row d-block">
				<button class="btn btn-sm btn-success rounded">Login</button>	
				<a href="/register" class="btn btn-sm btn-danger rounded">Register</a>	
			</div>
		</form>		
<%- include("./partials/footer")%>